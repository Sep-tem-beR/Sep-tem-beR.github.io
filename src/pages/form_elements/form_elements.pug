extends ../../components/pug/templates/template_Ui_kit_page.pug
include ../../components/blocks/form_elements/text-field/text-field.pug
include ../../components/blocks/form_elements/dropdown/dropdown.pug

block title
  | Form Elements
    

block body
  body.form-elements

    block prepend header
      include ../../components/blocks/header_logo/header_logo.pug
      +header('form-elements__header')

    block content
      .form-elements__wrapper
        section.form-elements__inputs.inputs
            div.inputs__column.column-1
              +text-field({
                  text_field_classes: ['column-1__text-field', 'text-field'],
                  value: 'text field',
                  block_head_line_classes: ['text-field__head-line'],
                  tupe: 'text',
                  placeholder: 'Email',
                  block_input_text_classes: ['text-field__input-text'],
              }, true)

              +text-field({
                  text_field_classes: ['column-1__text-field', 'text-field'],
                  value: 'text field',
                  block_head_line_classes: ['text-field__head-line'],
                  tupe: 'text',
                  placeholder: 'This is pretty awesome',
                  block_input_text_classes: ['text-field__input-text'],
              }, true)

              +dropdown({
                  text_field_classes: ['column-1__dropdown', 'dropdown', 'dropdown-default'],
                  value: 'dropdown',
                  block_head_line_classes: ['dropdown__head-line', 'dropdown-default__head-line'],
                  tupe: 'text',
                  placeholder: 'Сколько гостей',
                  block_wrapper_class: 'dropdown__input-wrapper',
                  block_input_text_classes: ['dropdown__input', 'dropdown-default__input'],
              }, true)

              +text-field({
                  text_field_classes: ['column-1__text-field', 'text-field'],
                  value: 'masked text field',
                  block_head_line_classes: ['text-field__head-line'],
                  tupe: 'text',
                  placeholder: 'ДД.ММ.ГГГГ',
                  block_input_text_classes: ['text-field__input-text'],
              }, true)

              
            div.inputs__column.column-2
            div.inputs__column.column-3
        section.form-elements__dropdown.dropdown
        section.form-elements__lists.lists
        section.form-elements__qualities.qualities
        section.form-elements__comments.comments